<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.AuthTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Set the status bar icons to be drawn in a light color -->
        <item name="android:fontFamily">@font/sourcesans_regular</item>
    </style>

    <style name="Theme.HomeTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Set the status bar icons to be drawn in a light color -->
        <item name="android:fontFamily">@font/sourcesans_regular</item>
    </style>


    <style name="Theme.SplashScreens" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
    <style name="header_text" parent="black_text">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/sourcesans_bold</item>
    </style>
    <style name="terms_text" parent="black_text">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="black_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/sourcesans_medium</item>
    </style>

    <style name="OutlinedTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/tf_color</item>
        <item name="cornerRadius">8dp</item> <!-- or just "cornerRadius" -->
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/black</item> <!-- Color for the hint text -->
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeErrorColor">@android:color/holo_red_dark</item>

        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="otp_box" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="backgroundColor">@color/grey_light</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="otp_text">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:focusable">false</item>
        <item name="android:maxEms">1</item>

        <item name="android:maxLength">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:inputType">numberPassword</item>
    </style>


    <style name="keypad_buttons_style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">13dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sourcesans_bold</item>
        <item name="backgroundTint">@color/btn_transparent</item>
        <item name="shapeAppearanceOverlay">@style/roundedButton</item>
    </style>
    <style name="roundedButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="pin_views">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:background">@drawable/ic_inactive_pin</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>

    <style name="button_primary" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>
    <style name="button_outline" parent="button_primary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="AccountsBaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/AccountsBottomimageSheet</item>
    </style>
    <style name="AccountsBottomimageSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_gradient</item>
        <item name="android:topLeftRadius">25dp</item>
        <item name="android:topRightRadius">25dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>






    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorHint">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>