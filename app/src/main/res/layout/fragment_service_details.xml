<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp">
        <include
            android:id="@+id/fragmentTitle"

            layout="@layout/fragment_title_desc_layout" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/grey_light"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/fragmentTitle"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvLoanPri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="8dp"
                    android:text="Service Name:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/sourcesans_medium"
                    app:layout_constraintEnd_toStartOf="@id/tvservice"
                    />
                <TextView
                    android:id="@+id/tvservice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/sourcesans_medium"
                    android:textColor="@color/black"
                    android:textAlignment="textEnd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tvLoanPri"
                    app:layout_constraintTop_toTopOf="@+id/tvLoanPri"
                    tools:text="KSH 10,0009" />
                <TextView
                    android:id="@+id/tvLoanBal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="8dp"
                    android:text="Original Price:"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvservice"
                    android:fontFamily="@font/sourcesans_medium"
                    app:layout_constraintEnd_toStartOf="@id/tvPriceVal"
                    />
                <TextView
                    android:id="@+id/tvPriceVal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/sourcesans_medium"
                    android:textColor="@color/black"
                    android:textAlignment="textEnd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tvLoanBal"
                    app:layout_constraintTop_toTopOf="@+id/tvLoanBal"
                    tools:text="KSH 10,0009" />
                <TextView
                    android:id="@+id/tvPercent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="8dp"
                    android:text="Discount Percentage:"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLoanBal"
                    android:fontFamily="@font/sourcesans_medium"
                    app:layout_constraintEnd_toStartOf="@id/tvPriceVal"
                    />
                <TextView
                    android:id="@+id/tvPercentVal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/sourcesans_medium"
                    android:textColor="@color/black"
                    android:textAlignment="textEnd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tvPercent"
                    app:layout_constraintTop_toTopOf="@+id/tvPercent"
                    tools:text="KSH 10,0009" />
                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="8dp"
                    android:paddingBottom="7dp"
                    android:text="Discounted Price:"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPercent"
                    android:fontFamily="@font/sourcesans_medium"
                    app:layout_constraintEnd_toStartOf="@id/tvPriceVal"
                    />
                <TextView
                    android:id="@+id/tvDiscountVal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"

                    android:textSize="15sp"
                    android:fontFamily="@font/sourcesans_medium"
                    android:textColor="@color/black"
                    android:textAlignment="textEnd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/tvPercent"
                    app:layout_constraintTop_toTopOf="@+id/tvDiscount"
                    tools:text="KSH 10,0009" />



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubscribe"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/subscribe"
            app:cornerRadius="8dp"
            android:layout_marginTop="50dp"
            app:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

