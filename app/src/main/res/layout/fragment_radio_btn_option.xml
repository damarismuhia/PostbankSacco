<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/ll_own"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_weight="1"
        android:background="@drawable/selected_rb_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_own"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:src="@drawable/active_dot" />

        <TextView
            android:id="@+id/tv_own"
            style="@style/black_text"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Myself"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_other"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/unselected_rb_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_other"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:src="@drawable/inactive_dot"
            app:tint="@color/grey" />

        <TextView
            android:id="@+id/tv_others"
            style="@style/black_text"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Other"
            android:textColor="@color/grey"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>